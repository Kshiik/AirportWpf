                        <StackPanel Orientation="Vertical" Background="#EFE1CC" Width="800">
                            <Grid Margin="10 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="420"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>

                                <!--Информация о пассажире-->
